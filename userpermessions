USE User;
GRANT SELECT, INSERT, DELETE, UPDATE ON Property, Lease, Maintenance, Bills  TO David; --in this case David would be an admin user

Use User;
GRANT INSERT, SELECT, DELETE, UPDATE ON Maintenance TO Handyman;
Use User
GRANT SELECT ON PROPERTY, LEASE, BILL TO Ana; -- in this case Ana is a resident.

CREATE ROLE admin;
CREATE ROLE tenet;
CREATE ROLE landlord;
GRANT SELECT, INSERT, DELETE, UPDATE ON Property, Lease, Maintenance, Bills TO admin;
GRANT SELECT ON Property, Lease, Maintenance, Bills TO landlord;
GRANT SELECT, INSERT, UPDATE ON Maintenance TO tenet;

GRANT admin TO David;
GRANT manager TO Alice;
GRANT employee TO Bob;
